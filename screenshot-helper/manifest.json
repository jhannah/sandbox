{
    "manifest_version": 3,
    "name": "Screenshot Procedure Helper",
    "version": "1.0",
    "description": "Capture screenshots and annotate them into step-by-step instructions.",
    "permissions": ["tabs", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"]
  }
  